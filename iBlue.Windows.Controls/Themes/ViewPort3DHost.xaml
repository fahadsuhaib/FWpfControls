<ResourceDictionary
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="clr-namespace:iBlue.Windows.Controls;assembly=iBlue.Windows.Controls">

    <Style TargetType="{x:Type local:ViewPort3DHost}">
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="{x:Type local:ViewPort3DHost}">
                    <Grid>
                        <ContentPresenter x:Name="PART_ContentHost" Content="{TemplateBinding ViewPort3DContent}" />
                        <Border x:Name="PART_WrapperElement" Background="Transparent" />
                    </Grid>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>

</ResourceDictionary>